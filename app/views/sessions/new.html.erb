<h2>Log in</h2>

<div class="row">
  <div class="col s10 offset-s1 m8 offset-m2 l6 offset-l3">
    <%= form_tag sessions_path do %>
      <div class="input-field">
        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email] %>
      </div>
      <div class="input-field">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>
      <div class="input-field">
        <%= submit_tag 'Log in', class: 'btn' %>
      </div>
    <% end %>
  </div>
</div>
